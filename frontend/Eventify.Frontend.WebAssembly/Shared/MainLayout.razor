@inherits LayoutComponentBase
@inject NavigationManager Navigation
<MudThemeProvider />

<MudLayout>
    <MudAppBar Elevation="0" Color="Color.Transparent" Fixed="false" DisableGutters>
        <NavLink ActiveClass="d-flex" class="mx-6" href="/">
            <MudText Color="Color.Primary" Typo="Typo.h5" Style="font-family: 'Pacifico', cursive;">Eventify</MudText>
        </NavLink>
        <MudStack Row>
        <MudTextField   Margin="Margin.Dense" @bind-Value="SearchQuery" Placeholder="Search" Variant="Variant.Outlined" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search"/>
        <MudTextField Margin="Margin.Dense" @bind-Value="SearchQuery" Placeholder="Location" Variant="Variant.Outlined" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.LocationCity"/>
<MudIconButton Icon="@Icons.Material.Filled.Search" Variant="Variant.Filled" Color="Color.Primary" class="my-1" />

        </MudStack>

        <MudSpacer />

        <MudButton Variant="Variant.Text">Log in</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="mx-4" >Sign up</MudButton>
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    public string SearchQuery { get; set; } = "";
    public void NavigateToHome()
    {
        Navigation.NavigateTo("/");
    }
}